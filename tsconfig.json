{
  "compilerOptions": {
    "target": "es2015",
    "outDir": "./dist/",
    "pretty": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "components/*": ["components/*"],
      "utils/*": ["utils/*"],
      "actions": ["store/actions"],
      "commonTypes": ["commonTypes"],
      "API": ["API"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}