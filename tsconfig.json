{
  "compilerOptions": {
    "target": "es2015",
    "outDir": "./dist/",
    "pretty": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"]
    }
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "./main.js"
  ]
}